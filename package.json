{
  "name": "setup-msstore-cli",
  "version": "0.1.0",
  "private": true,
  "description": "Setup Microsoft Store Developer CLI GitHub Action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package-tfx": "tfx extension create --manifest-globs vss-extension.json",
    "package": "ncc build lib/main.js --source-map --license licenses.txt && ncc build lib/azure-devops-task.js --source-map --license licenses.txt -o setup-msstore-cli-task && npm run package-tfx",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microsoft/setup-msstore-cli.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "msstore-cli"
  ],
  "author": "Microsoft",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/tool-cache": "^2.0.1",
    "azure-pipelines-task-lib": "^4.3.1",
    "azure-pipelines-tool-lib": "^2.0.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.15.5",
    "@types/q": "^1.5.5",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/parser": "^5.56.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.36.0",
    "eslint-plugin-github": "^4.6.1",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "js-yaml": "^4.1.0",
    "prettier": "2.8.6",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.2"
  }
}
